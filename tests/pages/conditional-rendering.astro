---
import Page from '../Page.astro';
---

<Page>

</Page>

<script>
import { $when, createRenderer, Html } from '../../src'
import { signal } from '../../src/signals'

const { div, button, span } = Html

function mount() {
	document.addEventListener('DOMContentLoaded', () => {
		const renderer = createRenderer(document.body)
		renderer.render(ConditionalRendering())
	})
}

function ConditionalRendering() {
	const $status = signal<'off' | 'on'>('off')
	const $maybeString = signal<string | undefined>(undefined)

	return div([
		button({
			className: 'border-red-500 border',
			onclick() {
				$status($status() === 'off' ? 'on' : 'off')
				$maybeString($maybeString() === undefined ? 'hello' : undefined)
			},
		}, ['click me']),
		div([
			$when($status,
				['on', () => span(['on'])],
				['off', () => span(['off'])],
			),
		]),
		div([
			$when($maybeString,
				$when.case($when.isString, (value) => span(['it\'s a string: ', value])),
				[undefined, () => span(['no string'])],
			),
		]),
	])
}

mount()
</script>
